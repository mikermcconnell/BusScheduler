rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId}/schedules/{scheduleId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    match /users/{userId}/drafts/{draftId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    match /users/{userId}/draft_schedules/{draftId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    match /draft_schedules/{draftId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    match /workflow_progress/{draftId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    match /tod_shift_runs/{runId} {
      allow create, read, update, delete: if isAuthenticated();
    }

    // Deny all other access by default
  }
}
